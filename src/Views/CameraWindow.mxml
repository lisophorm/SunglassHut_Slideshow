	<s:BorderContainer width="100%" height="100%" borderVisible="false" >
		
		<s:Image id="image1" alpha="0" width="100%" height="100%" smooth="true" scaleMode="letterbox" ready="image1_readyHandler(event)"  />
		<s:Image id="image2" alpha="0" width="100%" height="100%" smooth="true" scaleMode="letterbox" ready="image2_readyHandler(event)"  />

	</s:BorderContainer>
	
	
